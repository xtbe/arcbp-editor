# Copy this file to .env and adjust values for your environment.
# .env is excluded from git — never commit secrets or machine-specific config.

# Host port that Docker maps to the nginx container's port 80.
# Change this if 8080 is already taken on your machine.
HOST_PORT=8080

# Host port that Docker maps to the PocketBase API container's port 8090.
API_PORT=8090

# URL the Vite dev server (and built frontend) uses to reach PocketBase.
# In Docker the nginx reverse-proxy rewrites /pb/* → http://api:8090/*,
# so for production builds leave this empty or set to the same origin.
# For local `npm run dev` set it to http://localhost:8090.
VITE_PB_URL=http://localhost:8090
